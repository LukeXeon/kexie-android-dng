<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="isLoading"
            type="Boolean"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorBlackAlpha87"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                android:layout_width="320dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:visibility="@{isLoading?View.GONE:View.VISIBLE}"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--剩余的公里数-->
                    <TextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColorHint="@android:color/white"
                        android:hint="TEXT"
                        android:id="@+id/text_next_road_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="60sp" />
                    <!--左右转向的图标-->
                    <com.amap.api.navi.view.NextTurnTipView
                        android:layout_margin="20dp"
                        android:id="@+id/icon_next_turn_tip"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:textColor="@color/greyAccent"
                        android:gravity="center"
                        android:text="进入"
                        android:textSize="40sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColorHint="@android:color/white"
                        android:hint="TEXT"
                        android:id="@+id/text_next_road_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="50sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="@{!isLoading?View.GONE:View.VISIBLE}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressBar"
                        android:layout_margin="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cpb_background_progressbar_color="@color/lightblue200"
                        app:cpb_background_progressbar_width="10dp"
                        app:cpb_progressbar_color="@color/lightblue500"
                        app:cpb_progressbar_width="20dp" />
                    <TextView
                        android:textSize="50sp"
                        android:text="加载中"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <!-- 车道信息 -->
                <org.kexie.android.dng.navi.widget.DriveWayView
                    android:layout_gravity="center|top"
                    android:id="@+id/myDriveWayView"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"/>
            </FrameLayout>
        </LinearLayout>
        <!-- 交通状况条 -->
        <com.amap.api.navi.view.TrafficProgressBar
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:id="@+id/myTrafficBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <!-- 路口放大图 -->
        <com.amap.api.navi.view.ZoomInIntersectionView
            android:id="@+id/myZoomInIntersectionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"/>
    </FrameLayout>
</layout>