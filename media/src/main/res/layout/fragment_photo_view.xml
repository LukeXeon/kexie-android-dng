<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View.OnClickListener" alias="Action"/>
        <variable
            name="info"
            type="kexie.android.media.entity.MediaInfo"/>
        <variable
            name="actions"
            type="java.util.Map&lt;String,Action&gt;"/>
    </data>
    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.chrisbanes.photoview.PhotoView
                async_src="@{info.getPath()}"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            app:blurOverlayColor="@color/translucent_whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:onClick='@{actions.get("back")}'
                    android:padding="10dp"
                    async_src='@{"icon_back"}'
                    android:layout_width="60dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/colorBlackAlpha54"
                    android:textSize="25sp"
                    android:text="@{info.getTitle()}"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_marginRight="30dp"
                    android:onClick='@{actions.get("delete")}'
                    async_src='@{"icon_delete"}'
                    android:padding="10dp"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </eightbitlab.com.blurview.BlurView>
    </RelativeLayout>
</layout>
